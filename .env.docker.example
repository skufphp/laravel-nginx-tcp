# ====================================================
# Docker environment (PHP-FPM + Nginx via Unix socket)
# ====================================================

# PostgreSQL
POSTGRES_DB=laravel-postgres-nginx-socket-db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root
POSTGRES_HOST=laravel-postgres-nginx-socket

# Laravel (для приложения)
DB_CONNECTION=pgsql
DB_HOST=${POSTGRES_HOST}
DB_PORT=5432
DB_DATABASE=${POSTGRES_DB}
DB_USERNAME=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
# pgAdmin не поддерживает авто-регистрацию серверов.
# Добавьте сервер вручную, используя значение POSTGRES_HOST.

# Xdebug (по умолчанию выключен)
# Можно включить через docker-compose.xdebug.yml или make xdebug-up
XDEBUG_MODE=
XDEBUG_START=
XDEBUG_CLIENT_HOST=host.docker.internal